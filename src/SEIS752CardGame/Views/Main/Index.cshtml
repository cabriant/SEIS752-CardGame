<!DOCTYPE HTML>
<html lang="en" data-ng-app="cardGameApp">
    <head>
        <title>Card Game</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/Content/bootstrap.css" rel="stylesheet" />
        <link href="/Content/animations.css" rel="stylesheet" />
        
        <link rel="stylesheet" type="text/css" href="/Content/css/Site.css" />
        
        <base href="/" />
    </head>
    <body data-ng-cloak="">
        <header class="navbar navbar-default navbar-fixed-top box-shadow" data-ng-controller="NavigationController" data-ng-class="{'hidden':hide()}">
            <nav class="container">
	            <div class="navbar-header">
		            <a class="navbar-brand" href="#/">
			            <span class="appTitle">{{ appTitle }}</span>
		            </a>
					<div class="nav-container" data-collapse="isCollapsed">
						<ul class="nav navbar-nav nav-pills">
							<li data-ng-class="{'active':highlight('/blackjack')}"><a href="#/blackjack">Blackjack</a></li>
						</ul>
					</div>
		            <a href="javascript:void(0);" id="nav-login" data-ng-click="logout()" class="pull-right">Logout</a>
		            <a href="javascript:void(0);" id="user-link" data-ng-click="viewProfile()" class="pull-right">{{ displayName }}</a>
	            </div>
            </nav>
        </header>

        <div class="slide-animation-container main-content">
            <div data-ng-view="" id="ng-view"></div>
        </div>

        <div id="footer" data-ng-controller="NavigationController" data-ng-class="{'hidden':hide()}">
            <div class="navbar navbar-fixed-bottom text-center box-shadow">
                <div class="navbar-inner footer">
                    <div class="container">
                        <footer>
                            <div class="row">
                                <div class="col-md-12 footer-content">
                                    Copyright &copy; 2014 Element Zero Solutions, LLC
                                </div>
                            </div>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
		
		<!-- CSS Background: http://lea.verou.me/css3patterns/#carbon-fibre -->

	    <!-- 3rd party libraries -->
        <script src="/Scripts/angular/1.2.15/angular.min.js"></script>
        <script src="/Scripts/angular/1.2.15/angular-route.min.js"></script>
        <script src="/Scripts/angular/1.2.15/angular-animate.min.js"></script>
        <script src="/Scripts/angular-ui-bootstrap.js"></script>
        <script src="/Scripts/tweenMax.min.js"></script>

        <script src="/Scripts/jquery-2.1.0.min.js"></script>

        <!-- Main App -->
        <script src="/app/app.js"></script>
    
        <!-- Services -->
	    <script src="/app/services/userService.js"></script>
	    <script src="/app/services/accountService.js"></script>
		<script src="/app/services/blackjackService.js"></script>
        <script src="/app/services/httpInterceptors.js"></script>
    
        <!-- Controllers -->
        <script src="/app/controllers/login/loginController.js"></script>
        <script src="/app/controllers/navigationController.js"></script>
	    <script src="/app/controllers/home/homeController.js"></script>
		<script src="/app/controllers/blackjack/blackjackController.js"></script>
		<script src="/app/controllers/blackjack/blackjackTableController.js"></script>
		<script src="/app/controllers/account/accountController.js"></script>
    </body>
</html>